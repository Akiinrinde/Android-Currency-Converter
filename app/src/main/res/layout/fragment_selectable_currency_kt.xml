<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?fragment_background_color">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_selectable_currencies_kt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/row_selectable_currency_kt" />

    <com.turingtechnologies.materialscrollbar.DragScrollBar
        android:id="@+id/drag_scroll_bar_kt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        app:msb_lightOnTouch="false"
        app:msb_recyclerView="@id/recycler_view_selectable_currencies_kt" />

</RelativeLayout>

