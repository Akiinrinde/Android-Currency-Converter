<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="ic_list" format="reference" />
    <attr name="ic_no_connection" format="reference" />
    <attr name="ic_error" format="reference" />
    <attr name="text_color" format="color" />
    <attr name="icon_color" format="color" />
    <attr name="row_background_color" format="color" />
    <attr name="fragment_background_color" format="color" />
    <attr name="drawer_background_color" format="color" />

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="ic_list">@drawable/ic_light_list</item>
        <item name="ic_no_connection">@drawable/ic_light_no_connection</item>
        <item name="ic_error">@drawable/ic_light_error</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:colorControlHighlight">@color/accent</item>
        <item name="text_color">@android:color/black</item>
        <item name="icon_color">@android:color/black</item>
    </style>

    <!--    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="ic_list">@drawable/ic_list</item>
        <item name="ic_no_connection">@drawable/ic_dark_no_connection</item>
        <item name="ic_error">@drawable/ic_error</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:colorControlHighlight">@color/accent</item>
        <item name="row_background_color">@android:color/black</item>
        <item name="fragment_background_color">@android:color/black</item>
        <item name="drawer_background_color">@color/almost_black</item>
        <item name="text_color">@android:color/white</item>
        <item name="icon_color">@android:color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@drawable/background_button_text_color</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="dialog_animation_slide">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

</resources>